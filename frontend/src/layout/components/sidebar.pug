mixin sideBarLayers(idMapa,tituloCamadas, controller)
	- var titulo = tituloCamadas || 'Camadas'
	#sidebar.sidebar.scrollbar.collapsed

		// Nav tabs
		.sidebar-tabs
			ul(role='tablist')
				li(title="Camadas do projeto",
						data-toggle="tooltip",
						data-placement="right",
						data-container="body")
					a.inline_block(href='#camadas', role="tab")
						i.i.fa.fa-map-o

				li(title="Tipos sobreposições",
						data-toggle="tooltip",
						data-placement="right",
						data-container="body",
						ng-click=controller + ".getCamadasSobreposicoes()")
					a.inline_block(href='#sobreposicoes', role="tab")
						i.i.fa.fa-list-ul

		// Tab panes
		.sidebar-content
			#camadas.sidebar-pane
				h1.sidebar-header
					| #{titulo}
					span.sidebar-close
						i.fa.fa-times

				div(ng-show=controller + ".camadasDadosEmpreendimento.length > 0")
					uib-accordion
						.panel-default(uib-accordion-group, heading='Camadas do empreendimento')

							div.sidebar-body
								.row.no-margin-left-right.camadas-mapa(ng-repeat="camada in " + controller + ".camadasDadosEmpreendimento")
									div(ng-if="camada.geometria")
										.col-sm-9.col-xs-9.descricao
											span.fa.fa-square.icon-legenda(ng-style="{'color': camada.color}")
											span {{camada.item}}

										.col-sm-3.col-xs-3(style='padding: 0px;')

											button.btn.btn-exibe-camada.fa.icon-button(ng-class="{'fa-eye' : camada.visivel, 'fa-eye-slash' : !camada.visivel}",
											ng-click=controller + ".controlaExibicaoCamadas(camada)")
											button.btn.btn-exibe-camada.fa.fa-crosshairs.icon-button(ng-click=controller + ".controlaCentralizacaoCamadas(camada)")


				div#camadas-atividades(ng-show=controller + ".camadasDadosAtividade.length > 0")
					uib-accordion(ng-repeat="camadaAtividade in " + controller + ".camadasDadosAtividade")
						.panel-default(uib-accordion-group, heading="{{camadaAtividade.atividadeCaracterizacao.atividade.nome}}")

							div.sidebar-body(ng-repeat="camada in camadaAtividade.camadasGeo")
								.row.no-margin-left-right.camadas-mapa
									.col-sm-9.col-xs-9.descricao
										span.fa.fa-square.icon-legenda(ng-style="{'color': camada.color}")
										span {{camada.item}}

									.col-sm-3.col-xs-3(style='padding: 0px;')

										button.btn.btn-exibe-camada.fa.icon-button(ng-class="{'fa-eye' : camada.visivel, 'fa-eye-slash' : !camada.visivel}",
										ng-click=controller + ".controlaExibicaoCamadas(camada)")
										button.btn.btn-exibe-camada.fa.fa-crosshairs.icon-button(ng-click=controller + ".controlaCentralizacaoCamadas(camada)")


							div.sidebar-body(ng-if="camadaAtividade.atividadeCaracterizacao.sobreposicaoCaracterizacaoAtividades.length > 0")
								label Áreas de restrição da atividade
								.row(ng-repeat="sobreposicao in camadaAtivid" +
								"ade.atividadeCaracterizacao.sobreposicaoCaracterizacaoAtividades")
									.col-sm-9.col-xs-9.descricao
										span.fa.fa-square.icon-legenda(ng-style="{'color': sobreposicao.color}")
										span {{sobreposicao.tipoSobreposicao.nome}}

									.col-sm-3.col-xs-3(style='padding: 0px;')

										button.btn.btn-exibe-camada.fa.icon-button(ng-class="{'fa-eye' : sobreposicao.visivel, 'fa-eye-slash' : !sobreposicao.visivel}",
										ng-click=controller + ".controlaExibicaoCamadas(sobreposicao)")
										button.btn.btn-exibe-camada.fa.fa-crosshairs.icon-button(ng-click=controller + ".controlaCentralizacaoCamadas(sobreposicao)")

			#sobreposicoes.sidebar-pane
				h1.sidebar-header
					| Tipos sobreposições
					span.sidebar-close
						i.fa.fa-times

				div.sidebar-body
					.row.no-margin-left-right.camadas-mapa(ng-repeat="tipoSobreposicao in " + controller + ".TiposSobreposicao")
						.col-sm-9.col-xs-9
							.col-sm-2.col-xs-2.imagem-legenda
								img(src="{{tipoSobreposicao.legend[0].src}}")
							.col-sm-10.col-xs-10.descricao-legenda
								span {{tipoSobreposicao.nome}}

						.col-sm-3.col-xs-3(style='text-align: center;')

							button.btn.btn-exibe-camada.fa.icon-button(ng-class="{'fa-eye' : tipoSobreposicao.visivel, 'fa-eye-slash' : !tipoSobreposicao.visivel}",
							ng-click=controller + ".controlaExibicaoLayer(tipoSobreposicao)")
