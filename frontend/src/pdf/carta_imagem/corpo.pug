doctype html
html(lang="pt-br")
    head
        meta(charset='utf-8')
        title Análise - Licenciamento Ambiental - Amazonas
        link(rel='stylesheet' href='${templatePath}/style/estilo.css')
        style.

            * {
                margin: 0;
                padding:0;
            }
            .titulo{
                text-align: center;
            }
            .conteudo {
                margin: 0;
            }

            .titulo-item {
                text-decoration:underline;
                margin: 10px 20px 10px 60px;
                font-size: 14px;
                font-weight: bold;
            }
            .conteudo-item {
                font-size: 14px;
                font-weight: normal;
                padding-bottom: 5px;
                position: absolute;
                top: 20px;
                left:  780px;
                height: 725px;
            }

            td {
                border: 1px solid black;
            }

            .lista-conteudo {
                font-weight: bold;
                font-size: 14px;
            }

            .lista-referencias {
                font-size: 10px;
                padding-top: 100px;
                padding-left: 15px;
            }

            .lista-itens {
                padding-left: 100px;
                padding-right: 100px;
            }
            .col-item-titulo {
                width: 230px;
            }
            .col-item-conteudo {
                width: 200px;
                text-align: right;
            }

            .align-right {
                text-align: right;
            }

            .align-left {
                text-align: left;
            }

            table {
                width: 100%;
            }

            table, th, td {
                border: none;
            }

            .container {
            }

            .container-flex {
                display: flex;
                flex-direction: row;
            }

            div.mapa-carta-imagem{
                position: absolute;
                top: 0;
                left: 0;
                height: 100%;
            }

            div.legenda-carta-imagem {
                width: 100%;
                display: inline-block;
                text-align: left;
            }

            img {
                height: 770px;
            }

            .icon-legenda {
                font-size: 6px;
                color: transparent;
                padding-left: 5px;
                padding-top: 2px;
            }

            .titulo-legenda {
                margin-top: 20px;
                margin-bottom: 5px;
            }

            .logos {
                display: flex;
                text-align: center;
                margin: 25px;
            }

            .logo {
                margin: 0 5px;
            }

            .logo-ipaam {
                margin-bottom: 10px;
            }

            .logo-amazonas {
                margin-right: 20px;
            }

            .footer {
                position: absolute;
                bottom: 0; 
            }


            table {
                border: none;
            }

            th {
                width: 110px;
                vertical-align: top;
            }

body.corpo
    .container-flex
        .mapa-carta-imagem
            img(src='${imagemCaracterizacao}', alt='Red dot')
        .conteudo-item
            div.titulo
                h2 CARTA IMAGEM Nº ${analiseEspecifica.analise.processo.numero}
            div.conteudo
                
                .legenda-carta-imagem
                    | \#{list items:grupoDataLayers, as:'grupo'}
                    p.titulo-legenda
                        strong ${grupo.titulo}
                    | \#{list items:grupo.dataLayers, as:'dataLayer'}
                    span.icon-legenda(style= "background: ${dataLayer.colorCode}; color: ${dataLayer.colorCode};") .
                    span(style="padding-left:5px;") ${dataLayer.name}
                    br
                    | \#{/list}
                    | \#{/list}

            .footer
                .logos
                    img.logo.logo-ipaam(src='/public/app/images/logo-ipaam-preto.png' height="33")
                    img.logo.logo-amazonas(src='/public/app/images/logo_governo_am.png' height="63")
                
                table
                    tr
                        th INTERESSADO:
                        td ${analiseEspecifica.analise.processo.empreendimento.denominacao}
                    tr
                        th MUNICÍPIO:
                        td ${analiseEspecifica.analise.processo.empreendimento.municipio.nome}/AM
                    tr
                        th DATA:
                        td ${dataCartaImagem}
