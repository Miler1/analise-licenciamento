doctype html
html(lang="pt-br")
    head
        meta(charset='utf-8')
        title Análise - Licenciamento Ambiental - Amazonas
        link(rel='stylesheet' href='${templatePath}/style/estilo.css')
        style.
            * {
                margin: 0;
                padding:0;
            }
            .titulo{
                text-align: center;
            }
            .conteudo {
                margin: 20px 20px 20px 60px;
            }

            .titulo-item {
                text-decoration:underline;
                margin: 10px 20px 10px 60px;
                font-size: 14px;
                font-weight: bold;
            }
            .conteudo-item {
                font-size: 14px;
                font-weight: normal;
            }

            td {
                border: 1px solid black;
            }

            .lista-conteudo {
                font-weight: bold;
                font-size: 14px;
            }

            .lista-referencias {
                font-size: 10px;
                padding-top: 100px;
                padding-left: 15px;
            }

            .lista-itens {
                padding-left: 100px;
                padding-right: 100px;
            }
            .col-item-titulo {
                width: 230px;
            }
            .col-item-conteudo {
                width: 200px;
                text-align: right;
            }

            .align-right {
                text-align: right;
            }

            .align-left {
                text-align: left;
            }

            .imagem {
                margin-top: 20px;
                margin-bottom: 20px;
                text-align: center;
                width: 100%;
            }

            img {
                width: 60%;
            }

            .row {
                width: 100%;
            }

            .col-md-8 {
                width: 60%;
            }

            .col-md-4 {
                width: 30%;
            }



body.corpo
    div.titulo
        h2 CARTA IMAGEM Nº ${analiseEspecifica.analise.processo.numero}
    div.conteudo

        .conteudo-item
            p
                strong Interessado:
                | ${analiseEspecifica.analise.processo.empreendimento.denominacao}
            p
                strong Município:
                | ${analiseEspecifica.analise.processo.empreendimento.municipio.nome}/AM

        .col-md-8.align-left
            .imagem
                img(src='${imagemCaracterizacao}', alt='Red dot')
        .col-md-4.align-right
             p LEGENDA
             P QUADRO AREAS

    p.align-right Manaus, ${dataCartaImagem}