                                | &nbsp;                                

        div.row  
            strong.col-sm-2.margin-hr-analise-tecnica Atividades/Parâmetros:
            hr
            div(ng-repeat="atividadeCaracterizacao in ctrl.analiseTecnica.analise.processo.caracterizacao.atividadesCaracterizacao")
