include ../../../layout/components/paginacao

div

	filtro-processos(paginacao="cxEntAnalistaGeo.paginacao",
		disabled-fields="cxEntAnalistaGeo.disabledFields",
		atualizar-lista="cxEntAnalistaGeo.atualizarListaProcessos",
		atualizar-paginacao="cxEntAnalistaGeo.atualizarPaginacao",
		condicao-tramitacao="cxEntAnalistaGeo.condicaoTramitacao",
		pesquisar-ao-inicializar="true",
		is-analise-geo="true")

	h4 Lista de processos
	hr
	.row
		.col-md-12
			div(ng-if="cxEntAnalistaGeo.processos && cxEntAnalistaGeo.processos.length > 0").table-responsive
				table.table.table-striped.table-condensed.no-margin
					thead
						tr
							th
							th.col-md-1 Processo 
							th.col-md-2 CPF/CNPJ
							th.col-md-2 Interessado
							th.col-md-2 Município
							th.col-md-2 Licenças
							th.col-md-1 Prazo análise
							th.col-md-1 Prazo análise GEO
							th.col-md-1.text-right Ações
					tbody
						tr(ng-repeat="processo in cxEntAnalistaGeo.processos")
							td
							td(ng-attr-title="{{processo.numero}}") {{processo.numero | textoTruncado : 4:3}}
							td {{processo.cpfEmpreendimento ? processo.cpfEmpreendimento : processo.cnpjEmpreendimento | brCpfCnpj}}
							td {{processo.denominacaoEmpreendimento}}
							td {{processo.municipioEmpreendimento}}/{{processo.siglaEstadoEmpreendimento}}
							td {{processo.licencas}}
							td(ng-class="{'error-message': cxEntAnalistaGeo.dateUtil.verificaPrazoMinimoData(processo.dataVencimentoPrazoAnalise, cxEntAnalistaGeo.PrazoMinimoAvisoAnalise.ANALISE)}")
								| {{cxEntAnalistaGeo.dateUtil.getContaDiasRestantesData(processo.dataVencimentoPrazoAnalise)}}
							td(ng-class="{'error-message': cxEntAnalistaGeo.dateUtil.verificaPrazoMinimoData(processo.dataVencimentoPrazoAnaliseGeo, cxEntAnalistaGeo.PrazoMinimoAvisoAnalise.ANALISE_GEO)}")
								| {{cxEntAnalistaGeo.dateUtil.getContaDiasRestantesData(processo.dataVencimentoPrazoAnaliseGeo)}}
							td
								span.pull-right

									.dropdown.action-table
										button#dropdownMenu1.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='true')
											| Ações &nbsp;
											span.caret
										ul.dropdown-menu.dropdown-menu-right(aria-labelledby='dropdownMenu1',style="padding-bottom:0px;")
											li
												a(ng-click="cxEntAnalistaGeo.primeiroAcesso(processo)")
													i.glyphicon.glyphicon-ok-circle
													span Iniciar análise
											li
												a(ng-click="cxEntAnalistaGeo.visualizarProcesso(processo)")
													i.glyphicon.glyphicon-eye-open
													span Visualizar processo
											li
												a(ng-click="cxEntAnalistaGeo.solicitarDesvinculo(processo)")
													i.glyphicon.glyphicon-link
													span Solicitar desvínculo
				div
				+paginacao('cxEntAnalistaGeo.paginacao', 'cxEntAnalistaGeo.onPaginaAlterada')

		.row(ng-show="!cxEntAnalistaGeo.processos || cxEntAnalistaGeo.processos.length == 0")
			.col-md-12
				p.empty-result Não existem dados a serem exibidos.