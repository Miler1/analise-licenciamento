	h4.modal-title Justificativa

div.modal-body

	form(name="modalCtrl.formJustificativa", novalidate)
		.form-group
			textarea.form-control(name='texto', rows='6', ng-model="modalCtrl.texto", required)
			+inputErrors('modalCtrl.formJustificativa', 'texto', 'required')

