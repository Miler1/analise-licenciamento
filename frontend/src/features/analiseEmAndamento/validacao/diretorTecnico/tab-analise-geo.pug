#localizacaoGeografica
    .row
        .col-md-12
            #accordion-analista-geo.panel-group
                 div(uib-accordion class="accordion-analista-geo")
                    div(uib-accordion-group class="panel-default" is-open="validacaoAnaliseDiretor.openedAccordionAnalistaGeo")
                        uib-accordion-heading(ng-click="validacaoAnaliseDiretor.openedAccordionAnalistaGeo=!validacaoAnaliseDiretor.openedAccordionAnalistaGeo")
                            div Resultado da análise geo
                                i(class="pull-right glyphicon" ng-class="{'glyphicon-chevron-down':validacaoAnaliseDiretor.openedAccordionAnalistaGeo, 'glyphicon-chevron-right': !validacaoAnaliseDiretor.openedAccordionAnalistaGeo}")
                   
                        #dados-analista-geo
                            .parecer-diretor
                                .label-analista
                                    span.title-info Analista Geo: 
                                    span {{validacaoAnaliseDiretor.analiseGeo.analistasGeo[0].usuario.pessoa.nome}}

                                .label-situacao
                                    span.title-info Situação: 
                                    span {{validacaoAnaliseDiretor.parecerGeo.tipoResultadoAnalise.nome | uppercase}}

                                .label-situacao
                                    span.title-info {{validacaoAnaliseDiretor.labelParecerAnalistaGeo}}: 
                                    br
                                    span {{validacaoAnaliseDiretor.parecerGeo.parecer}}
                        
            #accordion-documentos.panel-group
                div(uib-accordion class="accordion-documentos")
                    div(uib-accordion-group class="panel-default" is-open="validacaoAnaliseDiretor.openedAccordionDocumentos")
                        uib-accordion-heading(ng-click="validacaoAnaliseDiretor.openedAccordionDocumentos=!validacaoAnaliseDiretor.openedAccordionDocumentos")
                            div Documentos da análise geo
                                i(class="pull-right glyphicon" ng-class="{'glyphicon-chevron-down': validacaoAnaliseDiretor.openedAccordionDocumentos, 'glyphicon-chevron-right': !validacaoAnaliseDiretor.openedAccordionDocumentos}")

                        #dados-documentos
                            .parecer-diretor

                                .botoes-download
                                    button.btn.btn-success.btn-download(type="button",title="Visualizar anexo",ng-click="validacaoAnaliseDiretor.baixarDocumentoGeo( validacaoAnaliseDiretor.parecerGeo, validacaoAnaliseDiretor.tipoDocumento.PARECER_ANALISE_GEO )")
                                        .glyphicon.glyphicon-file.icon-download
                                        | Parecer Geo
                                    br
                                    button.btn.btn-success.btn-download(type="button",title="Visualizar anexo",ng-click="validacaoAnaliseDiretor.baixarDocumentoGeo( validacaoAnaliseDiretor.parecerGeo, validacaoAnaliseDiretor.tipoDocumento.CARTA_IMAGEM )")
                                        .glyphicon.glyphicon-file.icon-download
                                        | Carta Imagem 


                            table.table.table-condensed.table-docs(style="padding:0px;",ng-if="validacaoAnaliseDiretor.parecerGeo.documentos.length > 0 ")

                                thead

                                    tr
                                        th.col-md-10 Arquivo anexado
                                        th.col-md-2.text-right Ações

                                tbody

                                    tr(ng-repeat="documento in validacaoAnaliseDiretor.parecerGeo.documentos")

                                        td.col-md-10 {{documento.nomeDoArquivo}}
                                        td.col-md-2.text-right 
                                            a.d-inline.margin-right-xs.aba-clicavel(ng-if="documento.id", title="Visualizar documento", ng-click="validacaoAnaliseDiretor.downloadDocumentoAnalise(documento.id)")
                                                i.glyphicon.glyphicon-eye-open

                                .row(ng-show="!validacaoAnaliseDiretor.parecerGeo.documentos || validacaoAnaliseDiretor.parecerGeo.documentos.length == 0")
                                    .col-md-12
                                        p.empty-result Não existem arquivos anexados. 

            #accordion-coordenador.panel-group
                div(uib-accordion class="accordion-coordenador")
                    div(uib-accordion-group class="panel-default" is-open="validacaoAnaliseDiretor.openedAccordionCoordenador")
                        uib-accordion-heading(ng-click="validacaoAnaliseDiretor.openedAccordionCoordenador=!validacaoAnaliseDiretor.openedAccordionCoordenador")
                            div Resultado da análise do coordenador
                                i(class="pull-right glyphicon" ng-class="{'glyphicon-chevron-down': validacaoAnaliseDiretor.openedAccordionCoordenador, 'glyphicon-chevron-right': !validacaoAnaliseDiretor.openedAccordionCoordenador}")
                
                        #dados-coordenador
                            .parecer-diretor
                                .label-analista
                                    span.title-info Coordenador:
                                    span {{validacaoAnaliseDiretor.parecerCoordenadorGeo.usuario.pessoa.nome}}

                                .label-situacao
                                    span.title-info Situação: 
                                    span {{validacaoAnaliseDiretor.parecerCoordenadorGeo.tipoResultadoAnalise.nome | uppercase}}

                                .label-situacao
                                    span.title-info {{validacaoAnaliseDiretor.labelParecerCoordenador}}:
                                    br
                                    span(ng-bind-html=" validacaoAnaliseDiretor.parecerCoordenadorGeo.parecer ")
