include ../../features/legislacao/legislacao
mixin resumo-processo(processo, abrirDadosProcesso, exibirBotaoAnaliseJuridica, exibirAnaliseJuridica)
    - exibirBotaoAnaliseJuridica = exibirBotaoAnaliseJuridica || false
    section.margin-bottom-md
        
        header.row
                
            h4.col-md-6 Resumo do protocolo

            .col-md-6(style="margin-top: 20px; margin-bottom: 10px")
                //- if !exibirBotaoAnaliseJuridica
                //-     button.btn.btn-default.col-md-offset-2(data-toggle="modal", data-target="#modalLegislacao")
                //-         i.glyphicon.glyphicon-th-list.glyphicon--with-right-margin
                //-         | Legislações
                if exibirBotaoAnaliseJuridica
                    button.btn.btn-default.col-md-offset-1(ng-click=exibirAnaliseJuridica)
                        i.glyphicon.glyphicon-th-list.glyphicon--with-right-margin
                        | Análise Jurídica                    
                button.btn.btn-default.col-md-offset-1.float-right(ng-click=abrirDadosProcesso)
                    i.glyphicon.glyphicon-eye-open.glyphicon--with-right-margin
                    | Visualizar protocolo
        div

            div
                strong Número: 
                span#texto_numero_processo
                    label.not-bold.margin-right-xs(for="texto_numero_processo",style="margin-left:113px;") {{#{processo}.numero}}
            div
                strong CPF/CNPJ: 
                span#texto_cpf_ou_cnpj
                    label.not-bold.margin-right-xs(for="texto_cpf_ou_cnpj",style="margin-left:100px;") {{#{processo}.empreendimento.pessoa.cpf ? #{processo}.empreendimento.pessoa.cpf : #{processo}.empreendimento.pessoa.cnpj | brCpfCnpj}}
            div
                strong Empreendimento: 
                span#texto_nome_empreendimento
                    label.not-bold.margin-right-xs(for="texto_nome_empreendimento",style="margin-left:61px;") {{#{processo}.empreendimento.denominacao}}
            div
                strong Município: 
                span#texto_municipio_estado   
                    label.not-bold.margin-right-xs(for="texto_municipio_estado",style="margin-left:104px;") {{#{processo}.empreendimento.municipio.nome}} / {{#{processo}.empreendimento.municipio.estado.codigo}}

