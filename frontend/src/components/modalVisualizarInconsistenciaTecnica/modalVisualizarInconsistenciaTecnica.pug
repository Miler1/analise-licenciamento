.modal-header

	button.close(type='button', ng-click="$ctrl.fechar()")
		span(aria-hidden='true') ×
		span.sr-only Fechar

	h4.modal-title Visualizar Inconsistência

.modal-body.body
	label.tituloTexto Descrição da inconsistência:
	div.campo-descricao
		p.descricao {{$ctrl.inconsistenciaTecnica.descricaoInconsistencia}}

	label.tituloTexto Tipo da inconsistência:
	div.campo-descricao
		p.descricao {{$ctrl.inconsistenciaTecnica.tipoInconsistencia}}

	table.area-modal.table.table-condensed(ng-if="$ctrl.inconsistenciaTecnica.anexos.length > 0")

		thead

			tr
				th.col-md-10 Arquivo(s) anexado(s)
				th.col-md-2.text-right Ações

		tbody

			tr(ng-repeat="anexo in $ctrl.inconsistenciaTecnica.anexos")

				td.col-md-10 {{anexo.nomeDoArquivo}}
				td.col-md-2.text-right
					a.d-inline.margin-right-xs(style='cursor: pointer;',title="Visualizar anexo", ng-click="$ctrl.baixarDocumentoInconsistencia(anexo)")
						i.glyphicon.glyphicon-eye-open
