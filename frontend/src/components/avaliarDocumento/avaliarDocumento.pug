.btn-group(data-toggle="buttons")

    
    label.btn.btn-plain(for="{{$ctrl.nome}}_valido", ng-attr-title="{{!$ctrl.habilitado ? $ctrl.mensagemNaoHabilitado : 'Validar'}}", ng-class="{'ativo': $ctrl.analiseDocumento.validado && $ctrl.habilitado, 'btn-plain--desabilitado': !$ctrl.habilitado}", ng-click="$ctrl.setValido(true)")
        
        input(id="{{$ctrl.nome}}_valido",type="radio", name="{{$ctrl.nome}}", ng-value="true", value="true", ng-model="$ctrl.analiseDocumento.validado")
        
        span.glyphicon.glyphicon-ok.checked.valido
        span.glyphicon.glyphicon-ok.unchecked.nao-marcado

    label.btn.btn-plain(for="{{$ctrl.nome}}_invalido", ng-attr-title="{{!$ctrl.habilitado ? $ctrl.mensagemNaoHabilitado : 'Invalidar'}}", ng-class="{'ativo': $ctrl.analiseDocumento.validado === false && $ctrl.habilitado, 'btn-plain--desabilitado': !$ctrl.habilitado}", ng-click="$ctrl.setValido(false)")
        
        input(id="{{$ctrl.nome}}_invalido",type="radio", name="{{$ctrl.nome}}", ng-value="false", value="false", ng-model="$ctrl.analiseDocumento.validado")
                       
        span.glyphicon.glyphicon-remove.checked.invalido 
        span.glyphicon.glyphicon-remove.unchecked.nao-marcado
