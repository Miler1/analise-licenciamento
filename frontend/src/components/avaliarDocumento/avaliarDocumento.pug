.btn-group(data-toggle="buttons")
    
    label.btn.btn-plain(for="{{$ctrl.nome}}_valido", title="Validar", ng-class="{active: $ctrl.validado}", ng-click="$ctrl.setValido(true)")
        
        input(id="{{$ctrl.nome}}_valido",type="radio", name="{{$ctrl.nome}}", ng-value="true", ng-model="$ctrl.validado")
        
        span.glyphicon.glyphicon-ok.checked.valido
        span.glyphicon.glyphicon-ok.unchecked.nao-marcado

    label.btn.btn-plain(for="{{$ctrl.nome}}_invalido", title="Invalidar", ng-class="{active: !$ctrl.validado}", ng-click="$ctrl.setValido(false)")
        
        input(id="{{$ctrl.nome}}_invalido",type="radio", name="{{$ctrl.nome}}", ng-value="false", ng-model="$ctrl.validado")
        
        span.glyphicon.glyphicon-remove.checked.invalido
        span.glyphicon.glyphicon-remove.unchecked.nao-marcado

a.btn(ng-if="!$ctrl.validado", title="Editar motivo de invalidar")
    i.fa.fa-pencil-square-o