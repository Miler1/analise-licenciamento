include ../../layout/components/mapPanel
include ../../layout/components/uploadField

mixin uploadShapes()
	div(ng-controller="uploadShapesController as uploadShapes" ng-cloak)
		+mapPanel('id1','500', true)
		
		+uploadField("validacaoShapeController","HIDROGAFIA",'#2196F3',"Hidrografia")
		+uploadField("validacaoShapeController","APP",'#8BC34A',"Área de preservação permanente")
		+uploadField("validacaoShapeController","AREA ANTROPIZADA",'#CDDC39',"Área antropizada")
		
		div.row
			div.pull-left
				button.btn.btn-default(ng-click="uploadShapes.enviaShapes")
					| &nbsp;Cancelar
			div.pull-right
				button.btn.btn-default.btn-success(ng-click="uploadShapes.enviaShapes", ng-disabled="uploadShapes.shapesUploaded !== 3")
					| &nbsp;Continuar
	